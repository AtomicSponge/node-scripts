{
  "name": "@spongex/comment-updater",
  "version": "2.0.1",
  "description": "Batch updates code comments at the top of source files",
  "author": "Matthew Evans",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomicSponge/node-scripts",
    "directory": "comment-updater"
  },
  "url": "https://www.npmjs.com/package/@spongex/comment-updater",
  "homepage": "https://github.com/AtomicSponge/node-scripts/#readme",
  "keywords": [
    "programming",
    "workflow",
    "script"
  ],
  "bugs": {
    "url": "https://github.com/AtomicSponge/node-scripts/issues"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "tsup"
  },
  "bin": {
    "comment-updater": "dist/comment-updater.js"
  },
  "type": "module",
  "tsup": {
    "entry": [
      "./src/comment-updater.ts"
    ],
    "format": "esm",
    "sourcemap": false,
    "clean": true
  },
  "files": [
    "./dist",
    "LICENSE.md",
    "README.md"
  ],
  "dependencies": {
    "@spongex/script-error": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.11",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
